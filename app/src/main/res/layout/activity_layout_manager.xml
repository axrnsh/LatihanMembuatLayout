<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown"
    tools:context=".LayoutManager">

    <include
        android:id="@+id/toolbarInclude"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="275dp"
            android:src="@drawable/header" />

        <LinearLayout
            android:id="@+id/prof"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:background="@color/darkbrown"
            android:onClick="goToMainActivity" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_marginTop="@dimen/margin15"
                    android:text="Profil"
                    android:textSize="@dimen/textSizeLarge"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/teksProfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin10"
                    android:textSize="@dimen/textSizeSuperSmall"
                    android:text="Perbaharui Foto, nama dan informasi lainnya" />

            </LinearLayout>

            <ImageView
                android:id="@+id/gambarProfil"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/user2"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/todolist"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/darkbrown"
            android:onClick="goToKomponenProduktivActivity">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/todo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_marginTop="@dimen/margin15"
                    android:text="Todo List"
                    android:textSize="@dimen/textSizeLarge"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/teksTodo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin10"
                    android:textSize="@dimen/textSizeSuperSmall"
                    android:text="Tulis jadwal rencana kegiatan anda" />

            </LinearLayout>

            <ImageView
                android:id="@+id/gambarTodo"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:src="@drawable/menu1"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>


    </LinearLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>